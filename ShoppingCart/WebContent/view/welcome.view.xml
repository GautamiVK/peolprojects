<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="com.sap.shoppingcart.view.welcome"
	 xmlns:l="sap.ui.layout">
	<Page title="Product">

		<headerContent>
			<Button id="idLogoutIcon" icon="sap-icon://logout" press="_handleLogoutButtonPress"
				text="Logout" type="Reject" />
		</headerContent>
		
		<VBox width="100%" height="100%" justifyContent="Center" alignItems="Center">
		<items>
			<Text xmlns="sap.m" text="Welcome , Click categories to start shopping"
				textAlign="Center">
			</Text>
			<core:Icon src="sap-icon://cart" class="sizeBig">
				<core:layoutData>
					<FlexItemData growFactor="1" />
				</core:layoutData>
			</core:Icon>
			</items> 
		</VBox>

		<footer>
			<Toolbar>
				<ToolbarSpacer />

			</Toolbar>
		</footer>

	</Page>
</core:View>