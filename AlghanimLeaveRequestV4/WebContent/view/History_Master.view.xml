<core:View controllerName="com.peol.view.History_Master"
	xmlns="sap.m" xmlns:shellfooter="sap.ushell.ui.footerbar" xmlns:core="sap.ui.core">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Button icon="sap-icon://nav-back" press="goBack" />
				</contentLeft>
				<contentMiddle>
					<Label text="{i18n>LR_TITLE_LEAVE_REQUESTS}"></Label>
					<Label id="count" text=""></Label>
				</contentMiddle>
			</Bar>
		</customHeader>
		<subHeader>
			<Bar>
				<contentLeft>
					<SearchField placeholder="{i18n>LR_SEARCH}" liveChange="handleSearch"
						showMagnifier="false">
					</SearchField>
					<!-- <Button id="synchronize" icon="sap-icon://synchronize" press="filterList"></Button> -->
				</contentLeft>
				<contentRight>

				</contentRight>
			</Bar>
		</subHeader>

		<List id="list" mode="{device>/listMode}" select="_handleSelect">

		</List>
		<footer>
			<Bar>
			</Bar>
		</footer>
	</Page>

</core:View>